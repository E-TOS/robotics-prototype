#Copy and paste the text below into the .basrc file on the TX2, this is to make connecting to the LiDAR easlier

#LiDAR setup
source ~/Programming/LidarROS/devel/setup.bash
alias connectlidar='bash ~/Programming/robotics-prototype/robot/rover/TX2/LiDAR_TX2_scripts/lidarConnect.sh'
alias roslidar='bash ~/Programming/robotics-prototype/robot/TX2/LiDAR_TX2_scripts/roslidar.sh'"$1"
